<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top">
    <div class="container">
      <%= link_to "RailsDev", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <% if user_signed_in? && current_user.admin == true %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'New Article', new_article_path, class: "nav-link" %>
            </li>
          </ul>
        <% end %>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to "Домой", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Блог", articles_path, class: "nav-link" %>
          </li>

          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Подписка', new_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Войти', new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>

  <%= render "shared/jumbo" if current_page?(root_path) %>

</header>
